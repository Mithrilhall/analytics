block scriptBelow
    script.
        function changeTab(tab) {
            $(".ui-tab").removeClass("ui-tab-active").addClass("ui-tab-inactive");
            $(".ui-tab-panel").hide();
            $("#tab-" + tab).addClass("ui-tab-active").removeClass("ui-tab-inactive");
            $("#" + tab).show();
        }