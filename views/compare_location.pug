        // NEW/RETURNING CLIENTS PER LOCATION
    article.grid_100p.grid.grid_fl
        div.inside
            h3 Loyalty
            div.grid_50p.grid_fl
                h3 Percentage
                div.clearfix(id="loyaltyBarEmpty")
